// Walkie talkie knob

// Import constants
import width, thickness, height, knobDiameter, knobHeight, knobRadius from "globals.kcl"
  
knobPlane = {
  plane = {
    origin = {
      x =  width / 2 - 0.70,
      y = -thickness / 2,
      z = height / 2
    },
    xAxis = { x = 1, y = 0, z = 0 },
    yAxis = { x = 0, y = 0, z = 1 },
    zAxis = { x = 0, y = 1, z = 0 }
  }
}

export knob = startSketchOn(knobPlane)
  |> startProfileAt([0.0001, 0], %)
  |> xLine(knobDiameter/2, %)
  |> yLine(knobHeight - 0.05, %)
  |> arc({
       angleStart = 0,
       angleEnd = 90,
       radius = .05
     }, %)
  |> xLineTo(0.0001, %)
  |> close(%)
  |> revolve({
    axis = "Y",
  }, %)